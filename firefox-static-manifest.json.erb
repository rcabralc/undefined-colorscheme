<%
    require_relative "./#{name.downcase}"
    scheme = Undefined.const_get(name)
    palette = scheme.public_send(variant)
%>{
    "manifest_version": 2,
    "name": "<%= name %> <%= variant.upcase %> Firefox Theme",
    "version": "0.1",
    "theme": {
        "colors": {
            "accentcolor": "<%= palette.bg %>",
            "button_background_hover": "<%= palette.term12_2 %>",
            "button_background_active": "<%= palette.term12_2 %>",
            "icons_attention": "<%= palette.term14 %>",
            "popup": "<%= palette.bg %>",
            "popup_border": "<%= palette.bg %>",
            "popup_highlight": "<%= palette.term12_2 %>",
            "popup_highlight_text": "<%= palette.fg %>",
            "popup_text": "<%= palette.fg %>",
            "sidebar": "<%= palette.bg %>",
            "sidebar_border": "<%= palette.bg %>",
            "sidebar_highlight": "<%= palette.term12_2 %>",
            "sidebar_highlight_text": "<%= palette.fg %>",
            "sidebar_text": "<%= palette.fg %>",
            "tab_background_separator": "<%= palette.term7 %>",
            "tab_line": "<%= palette.term13 %>",
            "tab_loading": "<%= palette.term11 %>",
            "tab_selected": "<%= palette.term13_3 %>",
            "toolbar": "<%= palette.bg %>",
            "toolbar_bottom_separator": "<%= palette.bg %>",
            "toolbar_field": "<%= palette.altbg %>",
            "toolbar_field_border": "<%= palette.term7 %>",
            "toolbar_field_border_focus": "<%= palette.term13 %>",
            "toolbar_field_separator": "<%= palette.term7 %>",
            "toolbar_field_text": "<%= palette.fg %>",
            "toolbar_top_separator": "<%= palette.term18 %>",
            "toolbar_vertical_separator": "<%= palette.term7 %>",
            "textcolor": "<%= palette.fg %>"
        }
    },
    "applications": {
        "gecko": {
            "id": "undefined-<%= variant %>-theme@rcabralc",
            "strict_min_version": "63.0"
        }
    }
}
