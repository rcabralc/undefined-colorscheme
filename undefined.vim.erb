function! s:merge_options()
    for [k, v] in items(exists('g:undefined') ? g:undefined : {})
        let s:options[k] = v
    endfor
endfunction
call s:merge_options()
delfunction s:merge_options

function! s:hl(group, fg, bg, ...)
    let gui_sp = ''
    if a:0 > 0
        let gui_mod = a:1
        if a:0 > 2
            let gui_sp = ' guisp=' . a:3
        endif
    else
        let gui_mod = 'NONE'
    endif
    exe "hi! ".a:group." guifg=".a:fg." guibg=".a:bg." gui=".gui_mod."".gui_sp
endfunction


" Palette definition
" ------------------

let s:palette = { 'dark': {}, 'light': {} }
<% Undefined.dark.each do |tone| %>
  let s:palette.dark.<%= tone.name %> = "<%= tone %>"
<% end %>
<% Undefined.light.each do |tone| %>
  let s:palette.light.<%= tone.name %> = "<%= tone %>"
<% end %>

let g:undefined#palette = s:palette

" Highlight definitions
" For relevant help:
" :help highlight-groups
" :help cterm-colors
" :help group-name

" For testing:
" :source $VIMRUNTIME/syntax/hitest.vim

hi clear
if exists("syntax on")
    syntax reset
endif

let g:colors_name = "undefined"
" Save background value: workaround for Vim bug, restored (enforced) at the
" end.
let s:is_dark = (&bg ==# 'dark')
if s:is_dark
  let s:palette.current = s:palette.dark
else
  let s:palette.current = s:palette.light
endif

<% Undefined.dark.map(&:name).each do |name| %>
  let s:<%= name %> = s:palette.current.<%= name %>
<% end %>

call s:hl('Normal', s:fg, s:bg)

"        *Comment        any comment
if s:options.allow_italics
    call s:hl('Comment', s:gray4, 'NONE', 'italic')
else
    call s:hl('Comment', s:gray4, 'NONE')
endif

"        *Constant       any constant
"         String         a string constant: "this is a string"
"         Character      a character constant: 'c', '\n'
"         Number         a number constant: 234, 0xff
"         Boolean        a boolean constant: TRUE, false
"         Float          a floating point constant: 2.3e10
call s:hl('Constant', s:orange0, 'NONE')
call s:hl('String', s:yellow0, 'NONE')
call s:hl('Number', s:purple0, 'NONE')
call s:hl('Boolean', s:purple0, 'NONE')

"        *Identifier     any variable name
"         Function       function name (also: methods for classes)
call s:hl('Identifier', s:orange0, 'NONE')
call s:hl('Function', s:red0, 'NONE')

"        *Statement      any statement
"         Conditional    if, then, else, endif, switch, etc.
"         Repeat         for, do, while, etc.
"         Label          case, default, etc.
"         Operator       "sizeof", "+", "*", etc.
"         Keyword        any other keyword
"         Exception      try, catch, throw
call s:hl('Statement', s:purple0, 'NONE', 'bold')
call s:hl('Operator', s:cyan0, 'NONE')
call s:hl('Exception', s:red0, 'NONE', 'bold')

"        *PreProc        generic Preprocessor
"         Include        preprocessor #include
"         Define         preprocessor #define
"         Macro          same as Define
"         PreCondit      preprocessor #if, #else, #endif, etc.
call s:hl('PreProc', s:purple0, 'NONE', 'bold')

"        *Type           int, long, char, etc.
"         StorageClass   static, register, volatile, etc.
"         Structure      struct, union, enum, etc.
"         Typedef        A typedef
call s:hl('Type', s:lime0, 'NONE')
call s:hl('StorageClass', s:red0, 'NONE', 'bold')

"        *Special        any special symbol
"         SpecialChar    special character in a constant
"         Tag            you can use CTRL-] on this
"         Delimiter      character that needs attention
"         SpecialComment special things inside a comment
"         Debug          debugging statements
call s:hl('Special', s:orange0, 'NONE')
call s:hl('Tag', s:cyan0, 'NONE')
call s:hl('Delimiter', s:orange0, 'NONE', 'bold')
call s:hl('SpecialComment', s:cyan0, 'NONE', 'bold')
call s:hl('Debug', s:cyan0, 'NONE')

"        *Underlined     text that stands out, HTML links
call s:hl('Underlined', s:cyan0, 'NONE', 'underline')

"        *Ignore         left blank, hidden  |hl-Ignore|
call s:hl('Ignore', 'NONE', 'NONE')

"        *Error          any erroneous construct
call s:hl('Error', s:red0, 'NONE', 'bold,reverse')

"        *Todo           anything that needs extra attention; mostly the
"                        keywords TODO FIXME and XXX
call s:hl('Todo', s:orange0, 'NONE', 'bold')


